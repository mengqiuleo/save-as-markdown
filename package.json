{
  "name": "save-as-markdown",
  "displayName": "Save as markdown",
  "version": "0.0.1",
  "description": "A extension that saves web page as markdown",
  "author": "mengqiuleo",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://juejin.cn/*",
      "https://*.zhihu.com/*",
      "https://*.csdn.net/*",
      "https://mp.weixin.qq.com/*"
    ],
    "permissions": [
      "activeTab",
      "clipboardWrite",
      "scripting"
    ]
  }
}